{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "types": [
      "webpack-env",
      "mocha",
      "chai"
    ],
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "baseUrl": ".",
    "paths": {
      "@dev/*": [
        "dev/*"
      ],
      "@/*": [
        "src/*"
      ],
      "lodash/*": [
        "node_modules/@types/lodash-es/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "types",
    "dev",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
  ]
}
